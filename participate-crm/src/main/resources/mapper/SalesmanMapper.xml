<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.participate.mapper.SalesmanMapper">
<!--添加方法-->
    <insert id="add">
        INSERT INTO
        salesman(salesman_parent_id,salesman_name,salesman_phone_number,salesman_password)VALUES(#{salesman_parent_id},#{salesman_name},#{salesman_phone_number},#{salesman_password})
    </insert>
<!--根据id查询一条信息-->
    <select id="getById" resultType="com.participate.entity.CallLogModel">
		SELECT * FROM salesman WHERE salesman_id = #{0}
	</select>
<!--查询所有信息-->
    <select id="selA" resultType="com.participate.entity.CallLogModel">
        SELECT salesman_id,salesman_parent_id,salesman_name,salesman_phone_number,salesman_password,salesman_create_time FROM salesman
        <where>
            <if test="salesman_id != null">
                AND salesman_id=#{salesman_id}
            </if>
            <if test="salesman_parent_id != null">
                AND salesman_parent_id=#{salesman_parent_id}
            </if>
            <if test="salesman_name != null and salesman_name != ''">
                AND salesman_name like '%' #{salesman_name} '%'
            </if>
            <if test="salesman_phone_number != null and salesman_phone_number != ''">
                AND salesman_phone_number like '%' #{salesman_phone_number} '%'
            </if>
            <if test="salesman_password != null and salesman_password != ''">
                AND salesman_password like '%' #{salesman_password} '%'
            </if>
            <if test="salesman_create_time != null and salesman_create_time != ''">
                AND salesman_create_time like '%' #{salesman_create_time} '%'
            </if>
        </where>
    </select>
<!--根据id修改某条信息-->
    <update id="update">
        UPDATE salesman
        <set>
            <if test="salesman_parent_id != null">
                salesman_parent_id = #{salesman_parent_id},
            </if>
            <if test="salesman_name != null">
                salesman_name = #{salesman_name},
            </if>
            <if test="salesman_phone_number != null">
                salesman_phone_number = #{salesman_phone_number},
            </if>
            <if test="salesman_password != null">
                salesman_password = #{salesman_password},
            </if>
            <if test="salesman_create_time != null">
                salesman_create_time = #{salesman_create_time}
            </if>
        </set>
        WHERE salesman_id = #{salesman_id}
    </update>

</mapper>

